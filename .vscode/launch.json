{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Blazor WASM Hosted (.NET 8)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-server",
      "program": "${workspaceFolder}/Blazor.Contacts.Wasm/Server/bin/Debug/net8.0/Blazor.Contacts.Wasm.Server.dll",
      "args": [],
      "cwd": "${workspaceFolder}/Blazor.Contacts.Wasm/Server",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    }
  ]
}
